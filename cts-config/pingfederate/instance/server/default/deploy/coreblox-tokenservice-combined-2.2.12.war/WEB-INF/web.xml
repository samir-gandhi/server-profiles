<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>Jersey Web Application</servlet-name>
        <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>com.sun.jersey.config.property.packages</param-name>
            <param-value>com.coreblox;com.fasterxml.jackson.jaxrs</param-value>
        </init-param>
    
        <load-on-startup>1</load-on-startup>
    </servlet>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <servlet-mapping>
        <servlet-name>Jersey Web Application</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>
<!--    <filter>
        <filter-name>Address Filter</filter-name>
        <filter-class>com.coreblox.services.filters.addresses.AddressFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Address Filter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>    -->
    <filter>
        <filter-name>Certificate Filter</filter-name>
        <filter-class>com.coreblox.services.tokenservices.auth.CertificateFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Certificate Filter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>
